---
import Icon from '@/components/Icon.astro';
import { SERVICES } from '@/consts/services';
import { SOCIALS } from '@/consts/socials';
import formatPhone from '@utils/format-phone-number';

const SOCIAL_BUTTONS_DATA = [
  {
    name: 'whatsapp',
    icon: 'whatsapp',
    href: SOCIALS.find(social => social.name === 'whatsapp')?.url,
    styles: 'bg-green-500 hover:bg-green-600',
  },
  {
    name: 'instagram',
    href: SOCIALS.find(social => social.name === 'instagram')?.url,
    icon: 'instagram',
    styles:
      'bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600',
  },
];

const SCHEDULES = [
  { day: 'Lunes a Viernes', hours: '9:00 - 18:00' },
  { day: 'Sábados', hours: '9:00 - 13:00' },
  { day: 'Domingos', hours: 'Cerrado' },
];
---

<footer class="bg-gray-900 text-white">
  <div class="mx-auto max-w-7xl divide-y divide-gray-800 px-4 sm:px-6 lg:px-8">
    <div class="grid gap-8 py-12 md:grid-cols-4 md:grid-rows-2 md:gap-2">
      {/* Logo and Description */}
      <div class="col-span-1 md:col-span-2 md:row-span-2">
        <div class="flex items-center gap-3">
          <Icon name="logo" class="size-12" />
          <div>
            <h3 class="text-xl font-bold">EM Servicios</h3>
            <p class="text-gray-400">Reparación y mantenimiento</p>
          </div>
        </div>
        <p class="leading-relaxed text-gray-400 md:text-balance">
          Somos especialistas en reparación de dispositivos electrónicos.
          Garantía, calidad y atención personalizada en cada trabajo.
        </p>
        <div class="flex gap-4">
          {
            SOCIAL_BUTTONS_DATA.map(button => (
              <a
                href={button.href}
                target="_blank"
                rel="noopener noreferrer"
                class={`rounded-lg p-2 transition-colors ${button.styles}`}
              >
                <Icon name={button.icon} class="size-5" />
              </a>
            ))
          }
        </div>
      </div>

      {/* Services */}
      <div class="grid gap-2 md:row-span-2">
        <h4 class="font-semibold">Servicios</h4>
        <ul class="grid gap-1 text-gray-400">
          {SERVICES.map(service => <li>{service.title}</li>)}
        </ul>
      </div>

      {/* Contact */}
      <div class="grid gap-2">
        <h4 class="font-semibold">Contacto</h4>
        <ul class="grid gap-1 text-gray-400">
          <li class="flex items-center gap-2">
            <Icon name="map-pin" class="size-4" />
            <span class="text-sm">Av. Principal 123, Local 5</span>
          </li>
          <li class="flex items-center gap-2">
            <Icon name="phone" class="size-4" />
            <span class="text-sm">
              {
                formatPhone(
                  SOCIAL_BUTTONS_DATA?.find(
                    social => social.name === 'whatsapp'
                  )?.href || ''
                )
              }
            </span>
          </li>
        </ul>
      </div>

      {/* Schedules */}
      <div class="grid gap-2">
        <h4 class="font-semibold">Horarios</h4>
        <ul class="grid gap-1 text-sm text-gray-400">
          {
            SCHEDULES.map(schedule => (
              <li>
                {schedule.day}: {schedule.hours}
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</footer>
