---
import Icon from '@/components/Icon.astro';
import { REPAIRS } from '@/consts/repairs';
import capitalize from '@/utils/capitalize';
import CategoryFilter from './CategoryFilter.astro';
---

<section id="trabajos" class="bg-gray-50 py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <h2 class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl">
        Trabajos Realizados
      </h2>
      <p class="mx-auto mb-8 max-w-3xl text-xl text-gray-600">
        Aqu铆 puedes ver algunos de nuestros trabajos m谩s recientes con detalles
        del proceso de reparaci贸n y resultados obtenidos.
      </p>

      {/* Category Filter */}
      <div class="mb-12 flex flex-wrap justify-center gap-4">
        <CategoryFilter />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        REPAIRS.map(repair => (
          <div
            class="group job-card overflow-hidden rounded-xl bg-white shadow-md transition-all duration-300 hover:shadow-xl"
            data-category={repair.category}
            data-id={repair.id}
          >
            <div class="relative overflow-hidden">
              <div class="grid h-48 grid-cols-2">
                <div class="relative">
                  <img
                    src={repair.before}
                    alt={`${repair.title} - Antes`}
                    class="h-full w-full object-cover"
                  />
                  <div class="absolute bottom-2 left-2 rounded bg-red-500 px-2 py-1 text-xs text-white">
                    Antes
                  </div>
                </div>
                <div class="relative">
                  <img
                    src={repair.after}
                    alt={`${repair.title} - Despu茅s`}
                    class="h-full w-full object-cover"
                  />
                  <div class="absolute right-2 bottom-2 rounded bg-green-500 px-2 py-1 text-xs text-white">
                    Despu茅s
                  </div>
                </div>
              </div>
              <button class="bg-opacity-0 group-hover:bg-opacity-50 absolute inset-0 flex items-center justify-center transition-all duration-300 group-hover:bg-black/50">
                <Icon
                  name="eye"
                  class="size-8 text-white opacity-0 transition-opacity group-hover:opacity-100"
                />
              </button>
            </div>

            {/* Card Content */}
            <div class="p-6">
              <div class="mb-2 flex items-center justify-between">
                <span class="rounded-full bg-blue-100 px-3 py-1 text-xs text-blue-800">
                  {capitalize(repair.category)}
                </span>
                <span class="text-sm text-gray-500">{repair.time}</span>
              </div>
              <h3 class="mb-2 text-lg font-semibold text-gray-900">
                {repair.title}
              </h3>
              <p class="text-sm leading-relaxed text-gray-600">
                {repair.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    {/* Modal */}
    <div
      id="repair-modal"
      class="bg-opacity-75 fixed inset-0 z-50 hidden items-center justify-center bg-black p-4"
    >
      <div
        class="max-h-[90vh] w-full max-w-4xl overflow-y-auto rounded-2xl bg-white"
      >
        <div class="p-6">
          <div class="mb-6 flex items-center justify-between">
            <div>
              <h3 id="modal-title" class="text-2xl font-bold text-gray-900">
              </h3>
              <span
                id="modal-category"
                class="rounded-full bg-blue-100 px-3 py-1 text-sm text-blue-800"
              ></span>
            </div>
            <button
              id="close-modal"
              class="text-2xl text-gray-400 hover:text-gray-600"
            >
              
            </button>
          </div>

          <div class="mb-6 grid grid-cols-1 gap-8 md:grid-cols-2">
            <div>
              <h4 class="mb-3 text-lg font-semibold text-red-600">
                Antes de la reparaci贸n
              </h4>
              <img
                id="modal-before"
                alt="Antes de la reparaci贸n"
                class="h-64 w-full rounded-lg object-cover"
              />
            </div>
            <div>
              <h4 class="mb-3 text-lg font-semibold text-green-600">
                Despu茅s de la reparaci贸n
              </h4>
              <img
                id="modal-after"
                alt="Despu茅s de la reparaci贸n"
                class="h-64 w-full rounded-lg object-cover"
              />
            </div>
          </div>

          <div class="rounded-lg bg-gray-50 p-6">
            <h4 class="mb-3 text-lg font-semibold">
              Detalles del trabajo realizado
            </h4>
            <p
              id="modal-description"
              class="mb-4 leading-relaxed text-gray-700"
            >
            </p>
            <div class="flex items-center text-sm text-gray-600">
              <span class="font-medium">Tiempo de reparaci贸n: </span>
              <span id="modal-time" class="ml-2"></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/*Mensaje cuando no hay resultados*/}
    <div id="no-results" class="hidden py-16 text-center">
      <div class="mb-4 text-6xl"></div>
      <h3 class="mb-2 text-2xl font-bold text-gray-900">
        No encontramos trabajos hechos en esta categor铆a
      </h3>
      <p class="text-gray-600">
        Prueba seleccionando otra categor铆a o contactanos para m谩s informaci贸n
      </p>
    </div>
  </div>
</section>

<script>
  import { REPAIRS } from '@/consts/repairs';
  import capitalize from '@/utils/capitalize';

  const section = document.querySelector('#trabajos');
  const jobCards = document.querySelectorAll<HTMLElement>('.job-card');
  const noResults = document.querySelector('#no-results');

  const modal = document.getElementById('repair-modal');
  const closeModal = document.getElementById('close-modal');

  section?.addEventListener('filter-category-change', event => {
    const category = event.detail.category;
    // console.log(`Category changed to: ${category}`);

    let visibleCount = 0;
    jobCards.forEach(card => {
      const cardCategory = card.getAttribute('data-category');
      if (category === 'todas' || cardCategory === category) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // Mostrar/ocultar mensaje de no resultados
    if (visibleCount === 0) {
      noResults?.classList.remove('hidden');
    } else {
      noResults?.classList.add('hidden');
    }
  });

  // Modal functionality
  jobCards.forEach(repair => {
    repair.addEventListener('click', function () {
      const repairId = parseInt(this.getAttribute('data-id') || '');
      const repair = REPAIRS.find(r => r.id === repairId);

      if (repair) {
        document.getElementById('modal-title').textContent = repair.title;
        document.getElementById('modal-category').textContent = capitalize(
          repair.category
        );
        document.getElementById('modal-before').src = repair.before;
        document.getElementById('modal-after').src = repair.after;
        document.getElementById('modal-description').textContent =
          repair.description;
        document.getElementById('modal-time').textContent = repair.time;

        modal?.classList.remove('hidden');
        modal?.classList.add('flex');
      }
    });
  });

  // Close modal
  closeModal?.addEventListener('click', function () {
    modal?.classList.remove('flex');
    modal?.classList.add('hidden');
  });

  // Close modal on backdrop click
  modal?.addEventListener('click', function (e) {
    if (e.target === modal) {
      modal?.classList.remove('flex');
      modal?.classList.add('hidden');
    }
  });
</script>
