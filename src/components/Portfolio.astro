---
import Icon from '@/components/Icon.astro';
import { REPAIRS } from '@/consts/repairs';
import capitalize from '@/utils/capitalize';
import CategoryFilter from '@/components/CategoryFilter.astro';
import Modal from '@/components/Modal.astro';
---

<section id="trabajos" class="bg-gray-50 py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <h2 class="mb-4 text-3xl font-bold text-gray-900 md:text-4xl">
        Trabajos Realizados
      </h2>
      <p class="mx-auto mb-8 max-w-3xl text-xl text-gray-600">
        Aqu√≠ puedes ver algunos de nuestros trabajos m√°s recientes con detalles
        del proceso de reparaci√≥n y resultados obtenidos.
      </p>

      {/* Category Filter */}
      <div class="mb-12 flex flex-wrap justify-center gap-4">
        <CategoryFilter />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        REPAIRS.map(repair => (
          <div
            class="group job-card overflow-hidden rounded-md bg-white shadow-md transition-all duration-300 hover:shadow-xl"
            data-category={repair.category}
            data-id={repair.id}
          >
            <div class="relative overflow-hidden">
              <div class="grid h-48 grid-cols-2">
                <div class="relative">
                  <img
                    src={repair.imgs.before}
                    alt={`${repair.title} - Antes`}
                    class="h-full w-full object-cover"
                  />
                  <div class="absolute bottom-2 left-2 rounded bg-red-500 px-2 py-1 text-xs text-white">
                    Antes
                  </div>
                </div>
                <div class="relative">
                  <img
                    src={repair.imgs.after}
                    alt={`${repair.title} - Despu√©s`}
                    class="h-full w-full object-cover"
                  />
                  <div class="absolute right-2 bottom-2 rounded bg-green-500 px-2 py-1 text-xs text-white">
                    Despu√©s
                  </div>
                </div>
              </div>
              <button class="bg-opacity-0 group-hover:bg-opacity-50 absolute inset-0 flex items-center justify-center transition-all duration-300 group-hover:bg-black/50">
                <Icon
                  name="eye"
                  class="size-8 text-white opacity-0 transition-opacity group-hover:opacity-100"
                />
              </button>
            </div>

            {/* Card Content */}
            <div class="p-6">
              <div class="mb-2 flex items-center justify-between">
                <span class="rounded-full bg-blue-100 px-3 py-1 text-xs text-blue-800">
                  {capitalize(repair.category)}
                </span>
                <span class="text-sm text-gray-500">{repair.time}</span>
              </div>
              <h3 class="mb-2 text-lg font-semibold text-gray-900">
                {repair.title}
              </h3>
              <p class="text-sm leading-relaxed text-gray-600">
                {repair.description}
              </p>
            </div>
          </div>
        ))
      }
    </div>

    {/* Modal */}
    <Modal />

    {/*Mensaje cuando no hay resultados*/}
    <div id="no-results" class="hidden py-16 text-center">
      <div class="mb-4 text-6xl">üîç</div>
      <h3 class="mb-2 text-2xl font-bold text-gray-900">
        No encontramos trabajos hechos en esta categor√≠a
      </h3>
      <p class="text-gray-600">
        Prueba seleccionando otra categor√≠a o contactanos para m√°s informaci√≥n
      </p>
    </div>
  </div>
</section>

<script>
  import { REPAIRS } from '@/consts/repairs';
  import { createElement } from '@/utils/create-element';

  const section = document.querySelector('#trabajos');
  const jobCards = document.querySelectorAll<HTMLElement>('.job-card');
  const noResults = document.querySelector('#no-results');

  section?.addEventListener('filter-category-change', (event: Event) => {
    const customEvent = event as CustomEvent<{ category: string }>;
    const category = customEvent.detail.category;

    let visibleCount = 0;
    jobCards.forEach(card => {
      const cardCategory = card.getAttribute('data-category');
      if (category === 'todas' || cardCategory === category) {
        card.style.display = 'block';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // Mostrar/ocultar mensaje de no resultados
    if (visibleCount === 0) {
      noResults?.classList.remove('hidden');
    } else {
      noResults?.classList.add('hidden');
    }
  });

  const modal = document.querySelector<HTMLDialogElement>('#modal');
  const carouselContainer = document.querySelector('.embla__container');

  function preloadImages(urls: string[]): Promise<HTMLImageElement[]> {
    return Promise.all(
      urls.map(url => {
        return new Promise<HTMLImageElement>((resolve, reject) => {
          const img = createElement('img', {
            src: url,
            onload: () => resolve(img),
            onerror: reject,
          });
        });
      })
    );
  }

  function showModal() {
    document.body.style.overflow = 'hidden';
    modal?.showModal();
  }

  // Modal functionality
  jobCards.forEach(repair => {
    repair.addEventListener('click', function () {
      const repairId = parseInt(this.getAttribute('data-id') || '');
      const repairData = REPAIRS.find(r => r.id === repairId);

      if (!repairData || !modal) return;

      const title = document.querySelector('#modal-title');
      const isSameRepair = title?.textContent === repairData.title;

      const description = document.querySelector('#modal-description');
      const time = document.querySelector('#modal-time');

      if (!isSameRepair) {
        // Actualizar texto
        if (title) title.textContent = repairData.title;
        if (description) description.textContent = repairData.description;
        if (time) time.textContent = repairData.time;

        // Preload de im√°genes y reemplazo del carousel
        const urls = repairData.imgs.all;

        preloadImages(urls)
          .then(images => {
            if (!carouselContainer) return;

            // Agregar slides nuevos
            const nodes = images.map(img => {
              return createElement(
                'div',
                { className: 'embla__slide border' },
                img
              );
            });

            carouselContainer.replaceChildren(...nodes);

            showModal();
          })
          .catch(err => {
            console.error('Error cargando im√°genes:', err);
            showModal();
          });
      } else {
        showModal();
      }
    });
  });
</script>
