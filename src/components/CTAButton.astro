---
interface Props {
  href: string;
  target?: string;
  rel?: string;
}

const { href, target, rel } = Astro.props;
---

<a
  href={href}
  target={target}
  rel={rel}
  class="border-brand-primary text-text-main hover:border-brand-highlight hover:bg-brand-primary hover:text-text-inverse inline-flex min-w-fit flex-1 items-center justify-center gap-3 border bg-transparent px-10 py-5 text-center font-mono font-bold tracking-widest uppercase transition-all duration-500 hover:-translate-y-0.5 hover:shadow-[0_0_30px_var(--color-brand-glow)]"
>
  <slot />
</a>
