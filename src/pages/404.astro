---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Icon from '@/components/Icon.astro';
import CTAButton from '@/components/CTAButton.astro';
---

<BaseLayout>
  <div
    class="pointer-events-none fixed top-0 left-0 z-10 h-full w-full opacity-[0.04]"
    style="background-image: url('data:image/svg+xml,%3Csvg viewBox=%270 0 200 200%27 xmlns=%27http://www.w3.org/2000/svg%27%3E%3Cfilter id=%27noiseFilter%27%3E%3CfeTurbulence type=%27fractalNoise%27 baseFrequency=%270.65%27 numOctaves=%273%27 stitchTiles=%27stitch%27/%3E%3C/filter%3E%3Crect width=%27100%25%27 height=%27100%25%27 filter=%27url(%23noiseFilter)%27/%3E%3C/svg%3E');"
  >
  </div>

  <main class="content flex min-h-screen items-center justify-center">
    <section
      class="flex flex-col items-center justify-center gap-4 py-20 text-center md:py-32"
    >
      <Icon name="logo-outline" class="text-brand-primary logo size-40" />

      <div class="space-y-2">
        <h1 class="text-text-main text-6xl font-bold md:text-7xl">404</h1>
        <p
          class="text-text-muted font-mono text-xl tracking-widest uppercase md:text-2xl"
        >
          Página no encontrada
        </p>
      </div>

      <p class="text-text-muted max-w-md leading-relaxed">
        Parece que la página que estás buscando no existe o fue movida. No te
        preocupes, podemos ayudarte a volver.
      </p>

      <CTAButton href="/">
        <Icon name="arrow-left" class="size-5 shrink-0 lg:size-8 lg:gap-4" />
        Volver al inicio
      </CTAButton>
    </section>
  </main>
</BaseLayout>

<style>
  :root {
    --glow-color: var(--color-brand-primary);
    --glow-blur: 60px;
    --glow-duration: 3s;
    --neon-color: rgb(34, 197, 94);
    --neon-blur: 40px;
    --neon-spread: 80px;
    --neon-flicker-duration: 2.5s;
    --intensity-min: 0.5;
    --intensity-max: 1;
    --intensity-duration: 2s;
  }

  @keyframes glowPulse {
    0%,
    100% {
      filter: drop-shadow(0 0 var(--glow-blur) var(--glow-color));
    }
    50% {
      filter: drop-shadow(0 0 calc(var(--glow-blur) * 1.5) var(--glow-color));
    }
  }

  @keyframes neonFlicker {
    0%,
    19%,
    21%,
    23%,
    25%,
    54%,
    56%,
    100% {
      filter: drop-shadow(0 0 var(--neon-blur) var(--neon-color))
        drop-shadow(0 0 var(--neon-spread) var(--neon-color));
      opacity: 1;
    }
    20%,
    24%,
    55% {
      filter: drop-shadow(0 0 var(--neon-blur) var(--neon-color))
        drop-shadow(0 0 calc(var(--neon-spread) * 0.5) var(--neon-color));
      opacity: 0.8;
    }
  }

  @keyframes intensityPulse {
    0%,
    100% {
      opacity: var(--intensity-max);
      filter: brightness(1);
    }
    50% {
      opacity: var(--intensity-min);
      filter: brightness(0.7);
    }
  }

  .logo {
    --duration: 3s;
    --intensity-duration: var(--duration);
    --glow-duration: var(--duration);
    animation:
      intensityPulse var(--intensity-duration) ease-in-out infinite,
      glowPulse var(--glow-duration) ease-in-out infinite;
  }
</style>
