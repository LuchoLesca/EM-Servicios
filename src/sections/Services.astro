---
import Icon from '@/components/Icon.astro';
import { SERVICES } from '@/consts/services';
---

<section id="servicios">
  <div
    class="scroll-reveal text-brand-highlight mb-6 flex items-center gap-4 font-mono text-xs tracking-[0.4em] uppercase"
  >
    <span class="bg-brand-primary h-px w-10"></span>Reparación Profesional
  </div>
  <h2
    class="scroll-reveal text-text-main mb-4 text-[clamp(2rem,5vw,3.5rem)] font-black uppercase"
  >
    Ofrecemos <span class="text-brand-primary">Reparación</span> Profesional
  </h2>
  <p
    class="scroll-reveal text-text-muted border-brand-deep mb-12 border-l-2 pl-6 font-mono text-lg"
  >
    Para todo tipo de dispositivos electrónicos con garantía y los mejores
    tiempos de entrega.
  </p>

  <div class="grid grid-cols-[repeat(auto-fit,minmax(280px,1fr))] gap-8">
    {
      SERVICES.map((service, index) => (
        <article
          class="card scroll-reveal border-brand-ghost bg-surface-card-subtle hover:border-brand-primary relative overflow-hidden border p-6 transition-all duration-400 hover:translate-y-[-10px] hover:shadow-[0_20px_40px_-10px_var(--shadow-dark)]"
          style={`transition-delay: ${index * 0.1}s`}
        >
          <div class="mb-4 flex items-center gap-4">
            <Icon name={service.icon} class="text-brand-primary size-12" />
            <h3 class="text-2xl font-bold">{service.title}</h3>
          </div>
          <p class="text-text-muted mb-4 text-sm leading-relaxed">
            {service.subtitle}
          </p>
          <ul class="text-text-muted space-y-2">
            {service.items.map(item => (
              <li class="marker:text-brand-primary list-inside list-disc">
                {item}
              </li>
            ))}
          </ul>
        </article>
      ))
    }
  </div>
</section>

<style>
  /* Card Hover Effect */
  .card {
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 2px;
      height: 100%;
      background: linear-gradient(
        to bottom,
        var(--color-brand-primary),
        transparent
      );
      opacity: 0;
      transition: 250ms;
    }

    &:hover::before {
      opacity: 1;
    }
  }
</style>
